<!-- views/flights/new.ejs -->
<%- include('../partials/header') %>

<h2 class="headerContainer"><%= "New Flights" %></h2>
  <form id="newFormBack" method="POST" action="/flights">
    <div>
      <label for="airline">Airline:</label>
      <select id="airline" name="airline" required>
        <option value="American">American</option>
        <option value="Southwest">Southwest</option>
        <option value="United">United</option>
      </select>
    </div>
    <div>
      <label for="airport">Airport:</label>
      <select id="airport" name="airport" required>
        <option value="AUS">AUS</option>
        <option value="DFW">DFW</option>
        <option value="DEN" selected>DEN</option>
        <option value="LAX">LAX</option>
        <option value="SAN">SAN</option>
      </select>
    </div>
    <div>
      <label for="flightNo">Flight No#:</label>
      <input type="number" id="flightNo" name="flightNo" min="10" max="9999" required>
    </div>
    <div>
      <label for="departs">Departure Date/Time:</label>
      <input type="datetime-local" id="departs" name="departs" value="<%= departsDate %>" required>

    </div>
    <div>
      <button type="submit">Submit</button>
    </div>
  </form>

  <%- include('../partials/footer') %>